@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <div class="card">
                <div class="card-body">
                    <form class="needs-validation" id="categoryForm" novalidate>
                        <h5 class="text-center">Create a Category</h5>
                        <div class="form-group mb-1">
                            <label for="categoryNameInput">Name:</label>
                            <input type="text" class="form-control" id="categoryNameInput" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group mb-1">
                            <label for="categoryDescInput">Description:</label>
                            <textarea class="form-control" id="categoryDescInput" required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="checkbox mb-2">
                            <label>
                                <input type="checkbox"> Entertainment
                            </label>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Submit form</button>
                        </div>
                    </form>
                </div>
            </div>
            <hr />
            <div class="card">
                <div class="card-body">
                    <form class="needs-validation" id="itemForm" novalidate>
                        <h5 class="text-center">Create an Item</h5>
                        <div class="form-group mb-1">
                            <label for="itemNameInput">Name:</label>
                            <input type="text" class="form-control" id="itemNameInput" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group mb-1">
                            <label for="itemDescInput">Description:</label>
                            <textarea class="form-control" id="itemDescInput" required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="checkbox mb-2">
                            <label for="selectCategory" class="form-label">Category:</label>
                            <select id="selectCategory" class="form-select selectpicker" data-live-search="true" required>
                                <option data-token="Some">Some</option>
                                <option data-token="Test">Test</option>
                                <option data-token ="Book">Book</option>
                                <option data-token ="Film">Film</option>
                                <option data-token ="Serial">Serial</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Submit form</button>
                        </div>
                    </form>
                </div>
            </div>
            <br />
        </div>
        <div class="col-md-8 order-md-1">

        </div>
    </div>
</div>

@section Scripts
{
    <script>
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        $(function () {
            $('.selectpicker').selectpicker();
        });
    </script>
}
